{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "target": "ES2018",
    "strict": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsbuildinfo",
    "module": "ES2015",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
  }
}
